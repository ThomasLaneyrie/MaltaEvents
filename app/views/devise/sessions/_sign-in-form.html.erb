  <h2>Sign in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "E-mail", autofocus: true, autocomplete: "E-mail", class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "form-control" %>
    </div>

    <%= f.submit "Connexion", class:"btn btn-lg btn-primary", style:'width:100%; margin-top:20px; margin-bottom:5px;' %>
        
    <div class="container-fluid d-flex justify-content-space-between">
      <div class="col d-flex justify-content-start">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
      <div class="col d-flex justify-content-end">
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name) %><br />
        <% end %><br>
      </div>
    </div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  <% end %>