<div class="col-lg-4 mb-5">
  <div class="card h-100 shadow border-0">
    <%if event.photoevent.attached?%>
      <%= image_tag event.photoevent, alt: 'photoevent' %>
    <%else%>
      <img class="card-img-top" src="https://img.freepik.com/vecteurs-libre/date-limite-marquage-employes-homme-crayon-fixant-date-evenement-prenant-note-dans-calendrier-illustration-vectorielle-pour-calendrier-ordre-du-jour-gestion-du-temps_74855-8347.jpg?w=1380&t=st=1677450166~exp=1677450766~hmac=d28d146b0ce75c92dbae27df3829b88780ca1fcc552676dccd76090ce6bfaec8" alt="..." />
    <%end%>
    <div class="card-body p-4">
      <div class="badge bg-primary bg-gradient rounded-pill mb-2">Le <%= event.start_date.strftime("%d-%m-%Y") %></div>
   <a class="text-decoration-none link-dark stretched-link " <%= link_to "", event_path(event.id) %><div class="h5 card-title mb-3"><%= event.title %></div></a>
      <p class="card-text mb-0">L'évènement se tiendra à <%= event.location %> à <%= event.start_date.strftime("%H:%M") %></p>
    </div>
      <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
          <div class="d-flex align-items-end justify-content-between">
              <div class="d-flex align-items-center">
              <% if event.administrator.avatar.attached? %>
                <img class="img-rounded" <%= image_tag event.administrator.avatar, alt: 'photoevent' %>
              <% else %>
                <img class="rounded-circle me-3" src="https://dummyimage.com/40x40/ced4da/6c757d" alt="..." />
              <% end %>
                <div class="small">
                    <div class="fw-bold">Evènement mis en ligne par <%= event.administrator.email %> </div>
                    <div class="text-muted"><%= event.created_at.strftime("%A %d %B %Y") %> </div>
                </div>
              </div>
          </div>
      </div>
  </div>
</div>


